<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.user.dao.IUserRepository">
	<resultMap id="userMap" type="com.my.user.vo.UserVO">
		<result property="userId" column="user_id" />
		<result property="userPw" column="user_pw" />
		<result property="userName" column="user_name" />
		<result property="userTel" column="tel" />
		<result property="picture" column="picture" />
		<result property="pictureSize" column="picture_size" />
	</resultMap>
	
	<insert id="userJoin" parameterType="com.my.user.vo.UserVO">
		insert into emp_users values(#{userId}, #{userPw}, #{userName}, #{userTel}, #{picture}, #{pictureSize})
	</insert>
	<select id="getPassword" parameterType="string" resultType="string">
		select user_pw from emp_users where user_id=#{userId}
	</select>
	<select id="getUser" parameterType="string" resultMap="userMap">
		select user_id, user_pw, user_name, tel, picture, picture_size
		from emp_users where user_id=#{userId}
	</select>
	
	<select id="idCheck" parameterType="String" resultType="int">
		select count(user_id) from emp_users where user_id=#{userId}
	</select>
</mapper>